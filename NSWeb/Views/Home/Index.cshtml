<script type="text/javascript">
    $(function () {
        $(".slowmsg").find(".b").each(function (e, t) {
            var n = [[0, 40], [20, 20], [40, 0]][e],
            o = ["rgb(55,137,250)", "rgb(99,99,99)", "rgb(235,67,70)"],
            i = 0;

            $(t).css({ "background-color": o[e] }),

         function s() {
             return true ?
             (
               $(t).animate(
               { left: n[i % 2] },
               {
                   duration: 800,
                   easing: "swing",
                   progress: function (n, s) { s >= .5 && $(t).css({ "background-color": o[(i + e) % 3] }) },
                   complete: function () { s() }
               }),
             void i++
             )
             : void setTimeout(s, 400)
         }()
        });

    });
</script>